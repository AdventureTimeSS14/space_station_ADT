uniform sampler2D SCREEN_TEXTURE;

void fragment() {
    highp vec4 color = zTextureSpec(SCREEN_TEXTURE, UV);

    highp mat3 m = mat3(
        vec3(0.150, 0.150, 0.150),
        vec3(0.350, 1.000, 0.350),
        vec3(0.150, 0.050, 0.150)
    );
    highp vec3 result = color.rgb * m;

    COLOR = vec4(result, 1);
}
