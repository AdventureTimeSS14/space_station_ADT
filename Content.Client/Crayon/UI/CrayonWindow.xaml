<DefaultWindow xmlns="https://spacestation14.io"
            xmlns:adt="clr-namespace:Content.Client.ADT.UserInterface.Controls"
            Title="{Loc 'crayon-window-title'}"
            MinSize="450 500"
            SetSize="450 500">
    <BoxContainer Orientation="Vertical">
        <adt:LegacyColorSelectorSliders Name="ColorSelector" Visible="False" /> <!-- ADT-Tweak - ColorSelectorSliders -> LegacyColorSelectorSliders -->
        <LineEdit Name="Search" Margin="0 0 0 8" PlaceHolder="{Loc 'crayon-window-placeholder'}" />
        <ScrollContainer VerticalExpand="True">
            <BoxContainer Name="Grids" Orientation="Vertical">
            </BoxContainer>
        </ScrollContainer>
    </BoxContainer>
</DefaultWindow>
