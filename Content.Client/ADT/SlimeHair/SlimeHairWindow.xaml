<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:humanoid="clr-namespace:Content.Client.Humanoid"
               Title="{Loc 'slime-hair-window-title'}"
               MinSize="600 400">
    <ScrollContainer HorizontalExpand="True" VerticalExpand="True" HScrollEnabled="False">
        <BoxContainer Orientation="Vertical" Margin="6">
            <BoxContainer Orientation="Vertical" Margin="4">
                <Label Text="{Loc 'humanoid-profile-editor-voice-label'}" />
                <OptionButton Name="VoiceButton" />
            </BoxContainer>
            <BoxContainer Name="MarkingsContainer" Orientation="Vertical" Margin="4"/>
        </BoxContainer>
    </ScrollContainer>
</DefaultWindow>
