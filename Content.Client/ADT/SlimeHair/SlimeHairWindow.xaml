<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:humanoid="clr-namespace:Content.Client.Humanoid"
               Title="{Loc 'slime-hair-window-title'}"
               MinSize="700 600">
    <ScrollContainer HorizontalExpand="True" VerticalExpand="True" HScrollEnabled="False">
        <BoxContainer Name="VoiceContainer" Orientation="Vertical" Margin="6">
            <BoxContainer Orientation="Vertical" Margin="4" >
                <Label Text="{Loc 'humanoid-profile-editor-voice-label'}" />
                <OptionButton Name="VoiceButton" />
            </BoxContainer>

            <ScrollContainer HorizontalExpand="True" VerticalExpand="True" HScrollEnabled="True">
                <BoxContainer Name="MarkingsContainer" VerticalExpand="True" HorizontalExpand="True" Orientation="Horizontal" Margin="4 4 4 -80"/>
            </ScrollContainer>
        </BoxContainer>
    </ScrollContainer>
</DefaultWindow>
