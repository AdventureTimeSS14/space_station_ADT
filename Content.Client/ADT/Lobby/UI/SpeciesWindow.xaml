<controls:FancyWindow xmlns="https://spacestation14.io"
         xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
         xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
         SetSize="800 800"
         MinSize="800 128">
    <BoxContainer Orientation="Horizontal" VerticalExpand="True">
        <ScrollContainer Name="SpeciesContainer" HorizontalExpand="True" VerticalExpand="True" VerticalAlignment="Top" HScrollEnabled="False"/>
        <BoxContainer Name="InfoContainer" Orientation="Vertical" SetSize="500 750" VerticalExpand="True" VerticalAlignment="Top">
            <BoxContainer Name="Showcase" Orientation="Horizontal" SetSize="500 250" VerticalExpand="True" VerticalAlignment="Top">
                <PanelContainer SetSize="500 250" VerticalExpand="True" VerticalAlignment="Top">
                    <graphics:StyleBoxFlat BackgroundColor="#1B1B1E" />
                <SpriteView Name="Mob" Scale="4 4" MouseFilter="Stop"/>
                </PanelContainer>
                <PanelContainer SetSize="500 250" VerticalExpand="True" VerticalAlignment="Top">
                <SpriteView Name="JobLoadout" Scale="4 4" MouseFilter="Stop"/>
                </PanelContainer>
            </BoxContainer>
        <ScrollContainer Name="DetailInfo" HorizontalExpand="True" VerticalExpand="True" VerticalAlignment="Bottom" HScrollEnabled="False"/>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
