<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      xmlns:customControls="clr-namespace:Content.Client.Administration.UI.CustomControls"
                      xmlns:ui="clr-namespace:Robust.Client.UserInterface.Controls;assembly=Robust.Client"
                      Title="{Loc 'flavor-interface-lable'}"
                      MinSize="800 600"
                      SetSize="1000 700">

    <PanelContainer>
        <PanelContainer.PanelOverride>
            <gfx:StyleBoxFlat BackgroundColor="#1a1a1a"/>
        </PanelContainer.PanelOverride>

        <BoxContainer Orientation="Vertical"
                      Margin="10"
                      HorizontalExpand="True"
                      VerticalExpand="True">

            <!-- Заголовок -->
            <BoxContainer Orientation="Horizontal" Margin="0 0 0 10">
                    <ui:RichTextLabel Name="LabelName"
                          Text="{Loc 'flavor-interface-lable'}"
                          HorizontalExpand="True"
                          Margin="8"/>
            </BoxContainer>

            <!-- ВЕРХНИЙ РЯД -->
            <BoxContainer Orientation="Horizontal"
                          HorizontalExpand="True"
                          VerticalExpand="True"
                          SeparationOverride="10"
                          MinSize="0 300">

                <!-- Character Preview -->
                <PanelContainer SetSize="300 300">
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#2d2d2d"/>
                    </PanelContainer.PanelOverride>

                    <BoxContainer Orientation="Vertical" Margin="8">
                        <ui:Label Text="{Loc 'flavor-interface-preview'}"
                                  HorizontalAlignment="Center"
                                  Margin="0 0 0 5"/>

                        <SpriteView Name="CharecterView"
                                    Margin="10 0 0 0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    OverrideDirection="South"
                                    SetSize="250 250"
                                    MaxSize="250 250"
                                    Scale="6 6"/>
                    </BoxContainer>
                </PanelContainer>

                <!-- FLAVOR TEXT -->
                <PanelContainer HorizontalExpand="True">
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#2d2d2d"/>
                    </PanelContainer.PanelOverride>

                    <BoxContainer Orientation="Vertical" Margin="8">
                        <ui:Label Text="{Loc 'flavor-interface-flavor-text-title'}"
                                  Margin="0 0 0 5"/>

                        <ScrollContainer VerticalExpand="True"
                                         HorizontalExpand="True"
                                         VScrollEnabled="True"
                                         HScrollEnabled="False">
                            <ui:RichTextLabel Name="FlavorTextLabel"
                                              MaxSize="600, 1000"
                                              Text="no desc?"
                                              HorizontalExpand="True"
                                              Margin="8"/>
                        </ScrollContainer>
                    </BoxContainer>
                </PanelContainer>
            </BoxContainer>

            <!-- НИЖНИЙ РЯД -->
            <BoxContainer Orientation="Horizontal"
                          HorizontalExpand="True"
                          MinSize="0 300"
                          SeparationOverride="10"
                          Margin="0 10 0 0">

                <!-- Headshot-->
                <PanelContainer SetSize="300 300" Name="HeadshotContainer" Access="Public">
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#2d2d2d"/>
                    </PanelContainer.PanelOverride>

                    <BoxContainer Orientation="Vertical" Margin="8">
                        <ui:RichTextLabel
                                  Name="HeadshotLable"
                                  Text="{Loc 'flavor-interface-headshot'}"
                                  MaxSize = "280 280"
                                  Access="Public"
                                  HorizontalAlignment="Center"
                                  Margin="5 5 5 5"/>

                        <TextureRect Name="HeadshotImage"
                                     Access="Public"
                                     VerticalExpand="True"
                                     HorizontalExpand="True"
                                     Stretch="KeepAspectCentered"/>
                    </BoxContainer>
                </PanelContainer>

                <!-- OOC NOTES -->
                <PanelContainer HorizontalExpand="True" MaxSize="370 10000" HorizontalAlignment="Right" MinSize="370, 0">
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#2d2d2d"/>
                    </PanelContainer.PanelOverride>

                    <BoxContainer Orientation="Vertical" Margin="8">
                        <ui:Label Text="{Loc 'flavor-interface-OOC-notes'}"
                                  Margin="0 0 0 5"/>

                        <ScrollContainer VerticalExpand="True"
                                         HorizontalExpand="True"
                                         VScrollEnabled="True"
                                         HScrollEnabled="False">
                            <ui:RichTextLabel Name="OOCNotesLabel"
                                              MaxSize="370 10000"
                                              Text="Выходит, тут ничего нету?"
                                              HorizontalExpand="True"
                                              Margin="8"/>
                        </ScrollContainer>
                    </BoxContainer>
                </PanelContainer>

                <!-- NO CUSTOM SPECIES -->
                <PanelContainer MinSize="250 0">
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#2d2d2d"/>
                    </PanelContainer.PanelOverride>

                    <BoxContainer Orientation="Vertical" Margin="8">
                        <ui:Label Text="{Loc 'flavor-interface-no-custom-species'}"
                                  Margin="0 0 0 5"/>

                        <ScrollContainer VerticalExpand="True"
                                         HorizontalExpand="True"
                                         VScrollEnabled="True"
                                         HScrollEnabled="False">
                            <ui:RichTextLabel Name="CustomSpeciesLabel"
                                              MaxSize="270 10000"
                                              Text="{Loc 'flavor-interface-no-custom-species-desc'}"
                                              HorizontalExpand="True"
                                              Margin="8"/>
                        </ScrollContainer>
                    </BoxContainer>
                </PanelContainer>
            </BoxContainer>
        </BoxContainer>
    </PanelContainer>
</controls:FancyWindow>
