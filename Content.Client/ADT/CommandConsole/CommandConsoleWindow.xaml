<controls1:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:controls1="clr-namespace:Content.Client.UserInterface.Controls"
    Title="Mini Command Console"
    MinSize="800 400">

    <PanelContainer VerticalExpand="True" HorizontalExpand="True" HorizontalAlignment="Stretch"
                    StyleClasses="PdaBackground" Margin="5">
        <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">

            <TextEdit Name="CommandInput" HorizontalExpand="True" VerticalExpand="False" Margin="0 0 0 5" MinHeight="100"/>

            <Button Name="ExecuteButton" Text="Execute" ToolTip="Execute command chain" StyleClasses="OpenBoth" />

            <ScrollContainer HorizontalExpand="True" VerticalExpand="True" Margin="0 5 0 0">
                <RichTextLabel Name="OutputLabel" HorizontalExpand="True" VerticalExpand="True" />
            </ScrollContainer>

        </BoxContainer>
    </PanelContainer>
</controls1:FancyWindow>
