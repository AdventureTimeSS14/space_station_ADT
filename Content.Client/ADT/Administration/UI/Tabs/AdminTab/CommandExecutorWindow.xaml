<DefaultWindow
    x:Class="Content.Client.Administration.UI.Tabs.AdminTab.CommandExecutorWindow"
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Loc admin-player-actions-window-command-executor}" MinSize="600 400">

    <BoxContainer Orientation="Vertical" SeparationOverride="8" Margin="10">

        <!-- Заголовок с описанием -->
        <Label Text="{Loc admin-command-executor-description}"
               StyleClasses="LabelBig"
               HorizontalAlignment="Center"
               Margin="0 0 0 10" />

        <!-- Панель с текстовым полем для команд -->
        <PanelContainer StyleClasses="chatPanel" VerticalExpand="True" Margin="5">
            <BoxContainer Orientation="Vertical" VerticalExpand="True" Margin="8">

                <!-- Инструкция -->
                <Label Text="{Loc admin-command-executor-instruction}"
                       StyleClasses="LabelSmall"
                       Margin="0 0 0 5" />

                <!-- Текстовое поле для команд -->
                <TextEdit Name="CommandText"
                          VerticalExpand="True" />

            </BoxContainer>
        </PanelContainer>

        <!-- Панель с кнопками -->
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True" SeparationOverride="10">

            <!-- Кнопка очистки -->
            <Button Name="ClearButton"
                    Text="{Loc admin-command-executor-clear}"
                    MinWidth="100" />

            <!-- Кнопка выполнения -->
            <Button Name="ExecuteButton"
                    Text="{Loc admin-command-executor-execute}"
                    HorizontalExpand="True"
                    StyleClasses="ButtonBig" />

        </BoxContainer>

        <!-- Статус выполнения -->
        <Label Name="StatusLabel"
               Text="{Loc admin-command-executor-ready}"
               StyleClasses="LabelSmall"
               HorizontalAlignment="Center" />

    </BoxContainer>
</DefaultWindow>
