<DefaultWindow
    x:Class="Content.Client.Administration.UI.Tabs.AdminTab.CommandExecutorWindow"
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Loc admin-player-actions-window-command-executor}" MinSize="700 500">

    <BoxContainer Orientation="Vertical" SeparationOverride="8" Margin="10">

        <!-- Заголовок с описанием -->
        <Label Text="{Loc admin-command-executor-description}"
               StyleClasses="LabelBig"
               HorizontalAlignment="Center"
               Margin="0 0 0 10" />

        <!-- Основная панель с двумя колонками -->
        <BoxContainer Orientation="Horizontal" VerticalExpand="True" SeparationOverride="10">

            <!-- Левая колонка - редактор команд -->
            <BoxContainer Orientation="Vertical" VerticalExpand="True" MinWidth="400">

                <!-- Панель с текстовым полем для команд -->
                <PanelContainer StyleClasses="chatPanel" VerticalExpand="True" Margin="0 0 0 5">
                    <BoxContainer Orientation="Vertical" VerticalExpand="True" Margin="8">

                        <!-- Инструкция -->
                        <Label Text="{Loc admin-command-executor-instruction}"
                               StyleClasses="LabelSmall"
                               Margin="0 0 0 5" />

                        <!-- Текстовое поле для команд -->
                        <TextEdit Name="CommandText"
                                  VerticalExpand="True" />

                    </BoxContainer>
                </PanelContainer>

                <!-- Панель с кнопками -->
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" SeparationOverride="10">

                    <!-- Кнопка очистки -->
                    <Button Name="ClearButton"
                            Text="{Loc admin-command-executor-clear}"
                            MinWidth="100" />

                    <!-- Кнопка сохранения пресета -->
                    <Button Name="SavePresetButton"
                            Text="{Loc admin-command-executor-save-preset}"
                            MinWidth="120" />

                    <!-- Кнопка выполнения -->
                    <Button Name="ExecuteButton"
                            Text="{Loc admin-command-executor-execute}"
                            HorizontalExpand="True"
                            StyleClasses="ButtonBig" />

                </BoxContainer>

                <!-- Статус выполнения -->
                <Label Name="StatusLabel"
                       Text="{Loc admin-command-executor-ready}"
                       StyleClasses="LabelSmall"
                       HorizontalAlignment="Center" />

            </BoxContainer>

            <!-- Правая колонка - история и пресеты -->
            <BoxContainer Orientation="Vertical" MinWidth="250">

                <!-- Пресеты команд -->
                <PanelContainer StyleClasses="chatPanel" MinHeight="200" Margin="0 0 0 5">
                    <BoxContainer Orientation="Vertical" Margin="8">

                        <Label Text="{Loc admin-command-executor-presets}"
                               StyleClasses="LabelBig"
                               Margin="0 0 0 5" />

                        <OptionButton Name="PresetSelector"
                                      MinWidth="200"
                                      Margin="0 0 0 5" />

                        <BoxContainer Orientation="Horizontal" SeparationOverride="5">
                            <Button Name="LoadPresetButton"
                                    Text="{Loc admin-command-executor-load-preset}"
                                    HorizontalExpand="True" />
                            <Button Name="DeletePresetButton"
                                    Text="{Loc admin-command-executor-delete-preset}"
                                    HorizontalExpand="True" />
                        </BoxContainer>

                    </BoxContainer>
                </PanelContainer>

                <!-- История команд -->
                <PanelContainer StyleClasses="chatPanel" VerticalExpand="True">
                    <BoxContainer Orientation="Vertical" Margin="8">

                        <Label Text="{Loc admin-command-executor-history}"
                               StyleClasses="LabelBig"
                               Margin="0 0 0 5" />

                        <ScrollContainer VerticalExpand="True" MinHeight="150">
                            <VBoxContainer Name="HistoryContainer"
                                           VerticalExpand="True" />
                        </ScrollContainer>

                        <Button Name="ClearHistoryButton"
                                Text="{Loc admin-command-executor-clear-history}"
                                HorizontalExpand="True"
                                Margin="0 5 0 0" />

                    </BoxContainer>
                </PanelContainer>

            </BoxContainer>

        </BoxContainer>

    </BoxContainer>
</DefaultWindow>
