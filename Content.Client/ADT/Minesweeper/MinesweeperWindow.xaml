<controls1:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Content.Client.ADT.Minesweeper"
    xmlns:controls1="clr-namespace:Content.Client.UserInterface.Controls"
    Title="▌ M I N E S W E E P E R ▐"
    MinSize="900 700"
    x:Class="Content.Client.ADT.Minesweeper.MinesweeperWindow">

  <PanelContainer Margin="10" VerticalExpand="True" HorizontalExpand="True">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" SeparationOverride="10">

      <!-- Заголовок -->
      <Label Text="💣 SYSTEM MODULE :: MINESWEEPER"
             Align="Center"
             StyleClasses="LabelHeading font-larger"
             Margin="0,0,0,10"
             FontColorOverride="lime"/>

      <!-- Игровое поле и боковая панель -->
      <BoxContainer Orientation="Horizontal" HorizontalExpand="True" VerticalExpand="True" SeparationOverride="10">

        <!-- Поле мин -->
        <PanelContainer Name="MineContainer"
                        HorizontalExpand="True"
                        VerticalExpand="True"
                        Margin="5"/>
                        <!-- Modulate="black" -->

        <!-- Панель управления -->
        <BoxContainer Orientation="Vertical" MinWidth="180" SeparationOverride="8" Margin="5">

          <Label Text="> CONTROLS" FontColorOverride="orange" Margin="0 0 0 8"/>
          <Button Name="ToggleFlagButton"
                  Text="● Mode: Reveal"
                  MinSize="160, 40"
                  Modulate="lightblue"/>
          <Button Name="NewGameButton"
                  Text="● New Game"
                  MinSize="160, 40"
                  Modulate="lightgreen"/>
          <OptionButton Name="DifficultySelect"
                        MinSize="160, 40"
                        Modulate="lightyellow"/>
          <PanelContainer MinHeight="2" Margin="0 4"/>

          <Label Text="> STATUS" FontColorOverride="orange" Margin="0 0 0 4"/>
          <Label Name="GameStatusLabel"
                 Text="Ready..."
                 FontColorOverride="lime"
                 Margin="0 2"/>

        </BoxContainer>
      </BoxContainer>

      <!-- Нижняя статусная панель -->
      <PanelContainer HorizontalExpand="True" MinHeight="25" Margin="5 0 5 0">
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True" SeparationOverride="10">
          <Label Text="⌨ MINESWEEPER_OS v1.04" FontColorOverride="gray"/>
          <Label Text="📚 Powered by Schrödinger.inc Systems" FontColorOverride="gray"/>
          <Label Text="📦 Auto-Save: Enabled" FontColorOverride="green" HorizontalExpand="True"/>
        </BoxContainer>
      </PanelContainer>

    </BoxContainer>
  </PanelContainer>
</controls1:FancyWindow>

